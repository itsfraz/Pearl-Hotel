# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
MONGO_URI=mongodb://localhost:27017/pearl-hotel
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/pearl-hotel

# JWT Secret (CHANGE THIS TO A RANDOM STRING!)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=5000

# Razorpay Configuration (Optional - for payment gateway)
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Node Environment
NODE_ENV=development
# For production: NODE_ENV=production

# CORS Origin (Optional - restrict in production)
# CORS_ORIGIN=http://localhost:3000

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
